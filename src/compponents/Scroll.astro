  <div class="header">
    <div class="progress-container">
      <svg class="progress-svg" viewBox="0 0 100 10">
        <image class="progress-svg" xlink:href="../../public/img/scroll.svg" width="100" height="10" />
      </svg>
    </div>
  </div>

  <style>
.header {
  position: fixed;
  top: -50px;
  z-index: 6;
  width: 100%;
}


  </style>

  <script>
window.onscroll = function() { myFunction() };

function myFunction() {
    var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    var scrolled = (winScroll / height) * 100;

    // Calculate the position of the SVG image
    var position = scrolled; // Use scrolled directly
    
    // Adjust the position of the SVG image horizontally
    document.querySelector('.progress-svg image').setAttribute('x', -100 + position + "%");
}
  </script>