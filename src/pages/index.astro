<style>
  /*data styles */
.data{
  display: grid;
  grid-template-columns: 1fr 1fr;
margin-bottom: 45px; 
}
.data img{
  width: 80%;
  margin-bottom: 15px;
}
.diagram1{
  margin-left: 40px;
}
.diagram2{
  margin: 0 10px 0 30px;
}
.data p{
  padding-left: 15px;
  padding-right: 50px;
}
  .omos{
 padding: 30px 100px 30px 100px;
 background-color: var(--section_col);
 text-align: center;
  }


  .paralax_test{
    background-image: url(../../public/img/bags.webp);
    min-height: 300px;
   width: 60%;
    background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  
  }
  
    .karrusel img{
        width: 10%;
        /*lineup är en rad*/
        margin-right: 15px;
    }
    .karrusel {
    display: flex;
    /*1 rad:*/
    flex-wrap: nowrap;
    /*speed och varaktighet*/
    animation: moveLinear 60s linear infinite;
    overflow-x: hidden;
}
  @keyframes moveLinear {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(100%);
    }
  }

  #samarb{
    margin-top: 40px;
  }
  

</style>
